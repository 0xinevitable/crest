generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Network {
  Testnet
  Mainnet
}

model FundingRates {
  id          Int      @id @default(autoincrement())
  network     Network  @default(Mainnet)

  ticker      String 
  fundingRate String
  readingTime DateTime
  createdAt   DateTime @default(now())

  @@index([ticker])
  @@index([createdAt])
  @@index([network])
  @@map("funding_rates")
}